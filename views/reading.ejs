<body>
    <section class="l-nav" id="l-nav">
        <div class="content">
            <div class="symbol"><span>AI</span>&nbsp AI-buddy</div>
            <div class="menu">
                <div class="menu-head">
                    Main menu
                </div>
                <ul>
                    <li><a href="/user/dashboard"><span><img src="/resources\img\Icons\dashboard.svg">Dashboard</span></a></li>
                    <li><a href="/user/dashboard/3dvr"><span><img src="/resources\img\Icons\3dvr.svg">3D vr</span></a></li>
                    <li><a href="/user/dashboard/benchmark"><span><img src="/resources\img\Icons\dashboard.svg">Benchmark</span></a></li>
                    <li><a href="/user/dashboard/reading"><span><img src="/resources\img\Icons\reading.svg">Reading</span></a></li>
                    <li><a href="/user/dashboard/courses"><span><img src="/resources\img\Icons\courses.svg">Courses</span></a></li>
                    <li><a href="/user/dashboard/leaderboard"><span><img src="/resources\img\Icons\leaderboard.svg">Leaderboard</span></a></li>
                    <li><a href="/logout"><span><img src="/resources\img\Icons\logout.svg">Logout</span></a></li>
                </ul>
            </div>
        </div>
    </section>

    <button onclick="myFunction()" class="rnavb"></button>
    <button onclick="myFunction1()" class="lnavb"></button>
    <section class="r-nav" id="r-nav">
        <div class="content">
            Your rank<br><br>
            <div class="ranking">
                <img src="/resources\img\Badgess\Gold_5.svg">
                <div class="text">
                    <div class="head">Legendary</div>
                    <div class="grid">
                        <div class="pts">
                            <% if(user.rank != 0){ %>
                            <div class="num"><%= user.rating %> </div>
                            <div class="font">total rating</div>
                            <% } else{%>
                            <div class="unranked">
                                unranked
                            </div>
                            <% } %>
                        </div>
                        <div class="mark"></div>
                        <div class="rank">
                            <% if(user.rank != 0){ %>
                            <div class="num"><%= user.rank %> </div>
                            <div class="font">world rank</div>
                            <% } else{%>
                            <div class="unranked">
                                unranked
                            </div>
                            <% } %>

                        </div>
                    </div>
                </div>
            </div>
            <div class="activity">
                <div class="head">Recent tasks</div>
                <div class="recent">
                    <% if(user.recent.length != 0){%>
                    <div class="activity">
                        <span class="text">Completed a task "Benchmark"</span>
                        <span class="points"><img src="/resources\img\Icons\task.svg">&nbsp+70</span>
                    </div>
                    <% }else{ %>
                    <div class="no-activity">
                        <span class="none">No activity</span>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    <section class="dashboard">
        <div class="dash-nav">
            <span class="left-part">Reading</span>
            <span class="right-part">
                <div class="search-div"><input type="text" class="search" placeholder="Search..."></div>
                <div class="profile">
                    <img src="<%= user.profile %>">
                    <div><%= user.name %> </div>
                </div>
            </span>
        </div>
        <br>
        <div class="books-flex">

            <div class="book">
                <img src="http://ecx.images-amazon.com/images/I/51l6XIoa3rL.jpg">
                <div class="book-desc">
                    <div class="bk-name">
                        With Schwarzkopf: Life Lessons of The Bear
                    </div>
                    <div class="bk-auth">
                        Natalie M. Rosinsky
                    </div>
